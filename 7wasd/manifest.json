{
  "manifest_version": 3,
  "name": "7wasd",
  "description": "7tv emotes for wasd.tv",
  "version": "1.0.0",
  "icons": {
    "16": "/icons/icon-16.png",
    "32": "/icons/icon-32.png",
    "48": "/icons/icon-48.png",
    "128": "/icons/icon-128.png"
  },
  "background": {
    "service_worker": "service.js",
    "type": "module"
  },
  "action": {
    "default_popup": "/popup/index.html",
    "default_icon": "/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["/scripts/content.js"],
      "run_at": "document_end",
      "matches": [
        "https://*.wasd.tv/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ]
}